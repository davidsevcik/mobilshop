<%= render :partial => 'admin/shared/tariff_manager_menu' %>

<div class='toolbar'>
  <ul class='actions'>
    <li>
      <p><%= button_link_to 'Nový operátor', new_object_url, :icon => 'add' %></p>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1>Operátoři</h1>

<table class="index">
	<thead>
		<tr>
      		<th>Název</th>
      		<th><%=t("action")%></th>
    	</tr>
  	</thead>
	
	<tbody>
    	<% @operators.each do |operator| %>
		<tr class="<%= cycle('even', 'odd') %>">
			<td>
				<%= operator.name %>
			</td>
			<td>
	          <%= link_to_edit operator %>  &nbsp;
	          <%= link_to_delete operator %>
	        </td>
		</tr>
		<% end %>
	</tbody>
</table>
