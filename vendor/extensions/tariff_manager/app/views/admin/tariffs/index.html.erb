<%= render :partial => 'admin/shared/tariff_manager_menu' %>

<div class='toolbar'>
  <ul class='actions'>
    <li>
      <p><%= button_link_to 'Nový tarif', new_object_url, :icon => 'add' %></p>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1>Tarify</h1>

<table class="index">
	<thead>
		<tr>
            <th>Operátor</th>
      		<th>Název</th>
      		<th>Cena</th>
      		<th><%=t("action")%></th>
    	</tr>
  	</thead>
	
	<tbody>
    	<% @tariffs.each do |tariff| %>
		<tr id="<%= dom_id tariff %>">
			<td><%= tariff.operator.name %></td>
			<td><%= tariff.name %></td>
            <td><%= tariff.price %></td>
			<td>
	          <%= link_to_edit tariff %>  &nbsp;
	          <%= link_to_delete tariff %>
	        </td>
		</tr>
		<% end %>
	</tbody>
</table>

