
<% f.field_container :title do %>
  <%= f.label :title, 'Název' %> <span class="required">*</span><br />
  <%= f.text_field :title, :class => 'fullwidth title'  %>
  <%= f.error_message_on :title %>
<% end %>


<% f.field_container :slug do %>
  <%= f.label :slug, 'Relativní adresa' %><br />
  <%= f.text_field :slug, :class => 'fullwidth'  %>
  <%= f.error_message_on :slug %>
<% end %>


<% f.field_container :body do %>
  <%= f.label :body, 'Text' %><br />
  <%= f.text_area :body, {:cols => 60, :rows => 8, :class => 'fullwidth'}  %>
  <%= f.error_message_on :body %>
<% end %>


<% f.field_container :category_id do %>
  <%= f.label :category_id, 'Kategorie' %> <br />
  <%= f.select :category_id, @content_categories.map {|cat| [cat.name, cat.id]}  %>
  <%= f.error_message_on :code %>
<% end %>


<% f.field_container :code do %>
  <%= f.label :code, 'Systémový název' %> <em>(Pozor! Změna může ovlivnit funkčnost celého webu.)</em><br />
  <%= f.text_field :code, :class => 'fullwidth'  %>
  <%= f.error_message_on :code %>
<% end %>


<fieldset>
  <legend>Obrázky</legend>
  <table>
    <% @content_node.images.each do |img| %>
      <tr>
        <td><%= img.attachment_file_name %></td>
        <td><%= check_box_tag "image_attributes[#{img.id}][destroy]" %> <%= label_tag "image_attributes[#{img.id}][destroy]", 'Smazat' %></td>  
      </tr>
    <% end %>

    <tr>
      <td colspan="2">Nahrát <%= file_field_tag 'image_attributes[new][attachment]' %></td>
    </tr>
  </table>
</fieldset>

