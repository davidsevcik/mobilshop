<% @body_class = 'kosik' %>


<div class="kosik">
  <div class="stin"> </div>
  <div id="prubeh">
    <div class="step1"><div> </div></div>
    <div class="in step2"><div> </div></div>
    <div class="step3"><div> </div></div>
  </div>

  <div id="obsah">
    <%= error_messages_for :order_info %>

    <% form_for(@order_info, :url => {:action => 'contact_process'}) do |f| %>
      <table class="form-table">
        <tr>
          <th style="width:170px"><%= f.label :name, 'Jméno' %> <span class="required">*</span></th>
          <td><%= f.text_field :name, :size => 40 %> <%= f.error_message_on :name %></td>
        </tr>
        <tr>
          <th><%= f.label :surname, 'Příjmení' %> <span class="required">*</span></th>
          <td><%= f.text_field :surname, :size => 40 %> <%= f.error_message_on :surname %></td>
        </tr>
        <tr>
          <th><%= f.label :phone, 'Kontaktní telefon' %> <span class="required">*</span></th>
          <td><%= f.text_field :phone, :size => 40 %> <%= f.error_message_on :phone %></td>
        </tr>
        <tr>
          <th colspan="2" style="padding-bottom:20px">
            <%= f.check_box :number_transfer %> <%= f.label :number_transfer, 'Žádám o převod telefonního čísla' %>
          </th>
        </tr>

        <tr>
          <th><%= f.label :company, 'Firma' %></th>
          <td><%= f.text_field :company, :size => 40 %></td>
        </tr>
        <tr>
          <th><%= f.label :ic, 'IČ' %></th>
          <td><%= f.text_field :ic, :size => 40 %></td>
        </tr>
        <tr>
          <th><%= f.label :dic, 'DIČ' %></th>
          <td style="padding-bottom:20px"><%= f.text_field :dic, :size => 40 %></td>
        </tr>

        <tr>
          <th><%= f.label :street, 'Ulice a č.p.' %> <span class="required">*</span></th>
          <td><%= f.text_field :street, :size => 40 %> <%= f.error_message_on :street %></td>
        </tr>
        <tr>
          <th><%= f.label :city, 'Město' %> <span class="required">*</span></th>
          <td><%= f.text_field :city, :size => 40 %> <%= f.error_message_on :city %></td>
        </tr>
        <tr>
          <th><%= f.label :zip, 'PSČ' %> <span class="required">*</span></th>
          <td><%= f.text_field :zip, :size => 40 %> <%= f.error_message_on :zip %></td>
        </tr>
        <tr>
          <th><%= f.label :country, 'Stát' %> <span class="required">*</span></th>
          <td><%= f.text_field :country, :size => 40 %> <%= f.error_message_on :country %></td>
        </tr>
      </table>


      <div id="tlacitka">
        <%= f.submit 'Pokračovat', :class => 'submit float-right' %>
        <p><span class="required">*</span> Povinné položky</p>
        <div class="clear"> </div>
      </div>
    <% end %>
  </div>
</div>